<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="denary.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".views.ReportDisplayActivity"
            android:label="@string/title_activity_report_display" >
        </activity>
        <activity
            android:name=".views.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".views.ReportsMenuActivity"
            android:label="@string/title_activity_reports_menu" >
        </activity>
        <activity
            android:name=".views.AddTransactionActivity"
            android:label="@string/title_activity_add_transaction" >
        </activity>
        <activity
            android:name=".views.AddAccountActivity"
            android:label="@string/title_activity_add_account" >
        </activity>
        <activity
            android:name=".views.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".views.TransactionListActivity"
            android:label="@string/title_activity_transaction_list" >
        </activity>
        <activity
            android:name=".extra.NanoConverter"
            android:label="Currency Converter" >
        </activity>
        <activity
            android:name=".views.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".extra.Preferences"
            android:label="@string/settings"
            android:theme="@style/MyTheme2">
        </activity>
        <receiver android:name=".extra.Widget_1x1" android:label="nanoConverter" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.nanoconverter.zlab.Widget_1x1.ACTION_WIDGET_RECEIVER"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_1x1_provider" />
        </receiver>
        <activity android:name=".extra.Widget_1x1_config"
            android:label="@string/app_name"
            android:theme="@style/MyTheme2">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


</manifest>
