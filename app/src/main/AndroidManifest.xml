<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="denary.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="denary.app.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name="denary.app.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="denary.app.ReportDisplayActivity"
            android:label="@string/title_activity_report_display" >
        </activity>
        <activity
            android:name="denary.app.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="denary.app.ReportsMenuActivity"
            android:label="@string/title_activity_reports_menu" >
        </activity>
        <activity
            android:name="denary.app.AddTransactionActivity"
            android:label="@string/title_activity_add_transaction" >
        </activity>
        <activity
            android:name="denary.app.AddAccountActivity"
            android:label="@string/title_activity_add_account" >
        </activity>
        <activity
            android:name="denary.app.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="denary.app.TransactionListActivity"
            android:label="@string/title_activity_transaction_list" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
