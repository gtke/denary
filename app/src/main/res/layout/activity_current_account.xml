<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="denary.app.views.CurrentAccountActivity">

    <TextView
        android:text="@string/account_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_name_textview"
        android:textSize="23dp"
        android:singleLine="false" />

    <TextView
        android:text="@string/account_balance_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account_balance_textview"
        android:layout_below="@+id/account_name_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_transaction_button_label"
        android:id="@+id/new_trans"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
